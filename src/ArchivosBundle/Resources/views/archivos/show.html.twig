{% extends 'AppBundle:Layouts:layout.html.twig' %}

{% block title %}
{{ parent() }} - archivo
{% endblock %}

{% block content %}
<div class="col-md-12 col-sm-12 col-lg-12">

<div id="top" class="row">
    <div class="page-header">
        <h2>View archivo <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ archivo.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Archivo</strong></p>
        <p>
            {{ archivo.archivo }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Fechacarga</strong></p>
        <p>
            {% if archivo.fechaCarga %}{{ archivo.fechaCarga|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Tipo</strong></p>
        <p>
            {{ archivo.tipo }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('archivos') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('archivos_edit', { 'id':  archivo.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('archivos_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('archivos_delete', { 'id': archivo.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>

</div>
{% endblock %}

