{% extends "AppBundle:Layouts:layout.html.twig" %}
{% block content %}
    <div class="col-lg-12 box-default">
        <div class="row">
            {% for cta in cuenta %}
                {% if(cta.movimiento=='Deposito') %}
                    <div class="col-lg-2">
                        <div class="panel panel-success">
                            <div class="panel-heading">
                                <i class="fa fa-money fa-2x"></i>
                                Mis Depositos 

                            </div>
                            <div class="panel-body">
                                <div class="monto">

                                     ${{cta.monto|number_format}}


                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
                {% if(cta.movimiento=='Inversion') %}
                  <div class="col-lg-2">
                      <div class="panel panel-warning">
                          <div class="panel-heading">
                              <i class="fa fa-building fa-2x"></i>
                              En Inversión 
                          </div>
                          <div class="panel-body">
                              <div class="monto">
                                  ${{(cta.monto*-1)|number_format}}
                              </div>
                          </div>
                      </div>
                  </div>
                              {% endif %}
                {% if(cta.movimiento=='Utilidades') %}
                              <div class="col-lg-2">
                      <div class="panel panel-primary">
                          <div class="panel-heading">
                              <i class="fa fa-line-chart fa-2x"></i>
                              Mis Ganancias 
                          </div>
                          <div class="panel-body"> 
                              <div class="monto">
                                  ${{cta.monto|number_format}}
                              </div>
                          </div>
                      </div>
                  </div>
                              {% endif %}
                              {% if(cta.movimiento=='Retiros') %}
                  <div class="col-lg-2">
                      <div class="panel panel-danger">
                          <div class="panel-heading">
                              <i class="fa fa-money fa-2x"></i>
                              Mis Retiros 
                          </div>
                          <div class="panel-body">
  
                          </div>
                      </div>
                  </div>
                  {% endif %}
                  {% if(cta.movimiento=='retencion') %}
                  <div class="col-lg-2">
                      <div class="panel panel-info">
                          <div class="panel-heading">
                              <i class="fa fa-hand-paper-o fa-2x"></i>
                              Mis Retenciones 
                          </div>
                          <div class="panel-body">
  
                          </div>
                      </div>
                  </div>
                  {% endif %}
                  {% if(cta.movimiento=='cartera') %}
                  <div class="col-lg-2">
                      <div class="panel panel-success">
                          <div class="panel-heading">
                              <i class="fa fa-suitcase fa-2x"></i>
                              Mi Cartera de Inversión 
                          </div>
                          <div class="panel-body">
  
                          </div>
                      </div>
                  </div>
                  {% endif %}
            {% endfor %}
            <a href="{{path('ctacte_deposito')}}" class="btn btn-info">Depositar</a>
        </div>

    </div>
{% endblock %}
