{% extends "AppBundle:Layouts:layout.html.twig" %}
{% block javascript %}
    {{parent()}}
    <script type='txt/javacript' src='{{asset('assets/js/custom/home.js')}}' ></script>
{% endblock %}
{% block content %}
    <div class=" container">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Home</div>
                <div class="panel-body">
                    <div class="row">
                        <div class=" col-lg-6 col-sm-6 col-md-6">
                        <div class="panel panel-success">
                            <div class="panel-heading">Proveedores con mas problemas</div>
                            <div class="panel-body"></div>
                        </div>
                        </div>
                        <div class=" col-lg-6 col-sm-6 col-md-6">
                        <div class="panel panel-warning">
                            <div class="panel-heading">Lotes en Custodia</div>
                            <div class="panel-body"></div>
                            <table class="table table-hover">
                                <thead>
                                <th>Cantidad</th>
                                <th>Container</th>   
                                <th>Pallet</th>
                                <th>Contenido</th>
                                </thead>
                                <tbody>
                            {% for lo in lotes%}
                                <tr>
                                    <td>{{lo.cantidad}}</td>
                                    <td>{{lo.container}}</td>
                                    <td>{{lo.number_Pallets}}</td>
                                    <td>{{lo.comoditty}}</td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        </div>
                        <div class=" col-lg-6 col-sm-6 col-md-6">
                        <div class="panel panel-success">
                            <div class="panel-heading">Mis Pallets</div>
                            <div class="panel-body"></div>
                        </div>
                        </div>
                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}
