{% extends 'AppBundle:Layouts:layout.html.twig' %}

{% block title %}
{{ parent() }} - fotos
{% endblock %}

{% block content %}
<div class="col-lg-12 col-md-12">
    <div class="col-md-6 col-lg-6">
        <div class="col-lg-12 col-md-12">
<div id="top" class="row">
    <div class="page-header">
        <h2>View foto <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ foto.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Foto</strong></p>
        <p>
            {{ foto.foto }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Tipo</strong></p>
        <p>
            {{ foto.tipo }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('fotos') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('fotos_edit', { 'id':  foto.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('fotos_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('fotos_delete', { 'id': foto.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>
        </div>
    </div>
</div>

{% endblock %}

