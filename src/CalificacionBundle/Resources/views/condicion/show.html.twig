{% extends 'AppBundle:Layouts:layout.html.twig' %}

{% block title %}
{{ parent() }} - condicion
{% endblock %}

{% block content %}
<div class="col-lg-12 col-sm-12 col-md-12">
<div id="top" class="row">
    <div class="page-header">
        <h2>View condicion <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ condicion.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Palletnumber</strong></p>
        <p>
            {{ condicion.palletNumber }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Size</strong></p>
        <p>
            {{ condicion.size }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Variety</strong></p>
        <p>
            {{ condicion.variety }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Firmness</strong></p>
        <p>
            {{ condicion.firmness }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Sunburn</strong></p>
        <p>
            {{ condicion.sunBurn }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Decay</strong></p>
        <p>
            {{ condicion.decay }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Mold</strong></p>
        <p>
            {{ condicion.mold }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Freezinginjury</strong></p>
        <p>
            {{ condicion.freezingInjury }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Pithybrowncore</strong></p>
        <p>
            {{ condicion.pithyBrownCore }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Scald</strong></p>
        <p>
            {{ condicion.scald }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Shriveling</strong></p>
        <p>
            {{ condicion.shriveling }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Bruising</strong></p>
        <p>
            {{ condicion.bruising }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Initinspect</strong></p>
        <p>
            {% if condicion.initInspect %}{{ condicion.initInspect|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Endinspect</strong></p>
        <p>
            {% if condicion.endInspect %}{{ condicion.endInspect|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('condicion') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('condicion_edit', { 'id':  condicion.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('condicion_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('condicion_delete', { 'id': condicion.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>

</div>
{% endblock %}

